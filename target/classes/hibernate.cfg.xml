<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">Disney123@</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/employes</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>
         <mapping class="com.dineshkearnings.hybernet_tutorial.EmployeTable"/>
        <mapping class="com.dineshkearnings.hybernet_tutorial.Vehical"/>
        <mapping class="com.dineshkearnings.hybernet_tutorial.TwoWheeler"/>
        <mapping class="com.dineshkearnings.hybernet_tutorial.FourWheeler"/>
    </session-factory>
</hibernate-configuration>
